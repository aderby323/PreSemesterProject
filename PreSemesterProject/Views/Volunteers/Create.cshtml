        </div>
        <div class="mb-3">
            <label asp-for="DriversLicenseOnFile" class="form-label">Driver's License on File?</label>
            <input asp-for="DriversLicenseOnFile" type="checkbox" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="SSCardOnFile" class="form-label">Social Security Card on File?</label>
            <input asp-for="SSCardOnFile" type="checkbox" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Inactive" class="form-label">Inactive?</label>
            <input asp-for="Inactive" type="checkbox" class="form-control">
        </div>


        <div class="mb-3">
            <label asp-for="VolunteerApprovalStatus" class="form-label">Approval Status</label>
            <select asp-for="VolunteerApprovalStatus" asp-items="Html.GetEnumSelectList<ApprovalStatus>()" class="form-control" required>
                <option>Select approval status... </option>
            </select>




            <!-- <input asp-for="VolunteerApprovalStatus" type="text" class="form-control"> -->
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            @Html.ActionLink("Cancel", "Index", "Volunteers", null, new { @class = "btn btn-outline-dark m-2" })




        </div>



    </form>
</div>



