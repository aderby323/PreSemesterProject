            <span asp-validation-for="CurrentLicenses" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="EmergencyContactName" class="form-label">Emergency Contact Name</label>
            <input asp-for="EmergencyContactName" type="text" class="form-control" required>
            <span asp-validation-for="EmergencyContactName" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="EmergencyPhone" class="form-label">Emergency Contact Phone (Use format: xxx-xxx-xxxx)</label>
            <input asp-for="EmergencyPhone" type="text" class="form-control" required>
            <span asp-validation-for="EmergencyPhone" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="EmergencyEmailAddress" class="form-label">Emergency Contact Email Address</label>
            <input asp-for="EmergencyEmailAddress" type="text" class="form-control" required>
