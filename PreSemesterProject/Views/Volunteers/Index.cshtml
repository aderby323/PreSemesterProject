@model List<PreSemesterProject.Models.Volunteer>

<div class="container">
    <h2>Volunteers</h2>
</div>

<section class="container">

    @if (Model.Count <= 0)
    {
        <div class="alert alert-info" role="alert">
            No volunteers found.
        </div>
    }

    <div class="nav-options-container">
        <div class="dropdown">
            <div class="nav-volunteer-option dropdown-toggle" id="volunteerFilter" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-filter"></i> Change Volunteer Filter
            </div>
            <div class="dropdown-menu" aria-labelledby="volunteerFilter">
                <a asp-action="Index" class="dropdown-item">None</a>
                <a asp-action="Index" asp-route-filter="Approved / Pending Approval" class="dropdown-item">Approved / Pending Approval</a>
                <a asp-action="Index" asp-route-filter="Approved" class="dropdown-item">Approved</a>
                <a asp-action="Index" asp-route-filter="Pending" class="dropdown-item">Pending Approval</a>
                <a asp-action="Index" asp-route-filter="Disapproved" class="dropdown-item">Disapproved</a>
                <a asp-action="Index" asp-route-filter="Inactive" class="dropdown-item">Inactive</a>
            </div>
        </div>
        <div class="nav-volunteer-option">
            View Volunteer Opportunity
        </div>
        <div class="nav-volunteer-option" style="margin-left: auto">
            <a asp-action="Create"><i class="fas fa-plus"></i> Add New Volunteer</a>

            <!-- <i class="fas fa-plus"></i> Add New Volunteer -->
        </div>

        <!-- TEMPORARY SOLUTION I'M USING -->
        @Html.ActionLink("Add New Volunteer", "Create", "Volunteers", null, new { @class = "btn btn-outline-dark m-2" })

    </div>
    <form asp-action="Index" method="get">
        <div class="input-group mb-0">
            <input type="text" class="form-control" name="searchString" value="@ViewData["CurrentSearch"]" placeholder="Search Volunteers">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
            </div>
        </div>
    </form>

    @if (Model.Count > 0)
    {
        <table class="volunteers-table">
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Preferred Centers</th>
                <th>Skills / Interests</th>
                <th>Availability</th>
                <th>Approval Status</th>
                <th>Inactive</th>
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Username</td>
                    <td>@x.FirstName</td>
                    <td>@x.LastName</td>
                    <td>@x.PreferredCenters</td>
                    <td>@x.SkillsAndInterests</td>
                    <td>@x.Availability</td>
                    <td>@x.VolunteerApprovalStatus</td>
                    <td>@x.Inactive</td>
                    <td>
                        <div class="volunteer-options">
                            <!--
                            <button class="btn btn-outline-info" type="submit" asp-action="Edit" asp-route-id="@x.Username">Edit</button>
                            <button class="btn btn-outline-danger" type="submit" asp-action="Delete" asp-route-id="@x.Username">Delete</button>
                            -->

                            @Html.ActionLink("Edit", "Edit", "Volunteers", @x.Username, new { @class = "btn btn-outline-info" })
                            @Html.ActionLink("Delete", "Delete", "Volunteers", x.Username, new { @class = "btn btn-outline-danger" })
                        </div>
                    </td>
                </tr>
            }
        </table>
    }

</section>


